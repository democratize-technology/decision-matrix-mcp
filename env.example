# Decision Matrix MCP Configuration
# Copy this to .env and customize for your environment

# AWS Configuration (for Bedrock backend)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_PROFILE=default

# Session Management
MAX_SESSIONS=50
SESSION_TTL_HOURS=24
CLEANUP_INTERVAL_MINUTES=30

# LLM Backend Configuration
DEFAULT_MODEL_BACKEND=bedrock
DEFAULT_MODEL_NAME=anthropic.claude-3-sonnet-20240229-v1:0

# Orchestrator Settings  
MAX_RETRIES=3
RETRY_DELAY=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Ollama Configuration (if using Ollama backend)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2

# LiteLLM Configuration (if using LiteLLM backend)
LITELLM_API_KEY=your_api_key_here
LITELLM_DEFAULT_MODEL=gpt-3.5-turbo
